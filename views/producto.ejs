<!doctype html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="/css/style.css?v=3.1">
    <link rel="icon" href="/images/webp/meipulseras.webp" type="image/x-icon" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://code.jquery.com/jquery-3.7.1.slim.min.js" integrity="sha256-kmHvs0B+OpCW5GVHUNjv9rOmY0IvSIRcf7zGUDTDQM8=" crossorigin="anonymous"></script>
    <title><%= prodname %></title>
</head>
<body onload="valorCero()">
    <div class="nav" id="nav">
        <ul class="navbar" id="navbar">
            <li class="links"><a class="logosredes" href="/"> 
                <img class="wsplogo" src="/images/webp/home.webp" alt="home"></a></li>
            <li class="links2" id="logout"><a class="logosredes" href="/auth/logout"> 
                <img class="wsplogo" src="/images/webp/logout.webp" alt="logout"></a></li>
            <li class="links2 link3" id="pipe"><a class="pipe link">|</a></li>
            <li class="links2" id="cart"><a class="logosredes" href="/cart"> 
                <img class="wsplogo" src="/images/webp/cart.webp" alt="cart">
                <p id="counter" class="counter"><%= count %></p>
            </a></li>
            <li class="links2 link3" id="pipe"><a class="pipe link">|</a></li>
            <li class="links2 link3" id="username"><a class="translate link" key="USERNAME" href="/personal"><%= username %></a></li>
            <li class="links2" id="login"><a class="logosredes" href="/login"> 
                <img class="wsplogo" src="/images/webp/login.webp" alt="con_logo"></a></li>
        </ul>
    </div>
    <div class="relleno2"></div>
    <div class="relleno2"></div>
    <form action="/producto" method="post">
        <div class="fotiprod">
            <div class="prodnamemobile">
                <p class="prodtitle"><%= prodname %></p>
            </div>
            <div class="fotoprod1">
                <div class="foto1" data-scale="1.6" data-image="<%= prodimage %>" src="<%= prodimage %>"></div>
                <!-- <img class="foto1" data-scale="1.6" data-image="<%= prodimage %>" src="<%= prodimage %>" alt="con_logo"></a> -->
            </div>
            <div class="prodname">
                <p class="prodtitle"><%= prodname %></p>
                <input type="hidden" value="<%= prodnumber %>" id="prodnumber" name="prodnumber">
            </div>
            <div class="prodprice">
                <div class="pricestock">
                    <p class="prodnum"><b>$<%= prodprice.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ".") %></b></p>
                    <p id="stock" class="stock"><b>Disponiblidad: <%= prodstock %></b></p>
                    <p id="stockCero" class="stockCero" style="display: none;"><b>Renovación de stock próximamente.</b></p>
                </div>
            </div>
            <div class="prodnum">
                <div class="botones">
                    <button class="minplus" id="minus" type="button" data-action="decrement" onclick="disablebuttonminus()"><span>-</span></button>
                    <input class="inputminplus" type="text" id="prodquantity" name="prodquantity" value="0"></input>
                    <button class="minplus" id="plus" type="button" data-action="increment" onclick="disablebuttonplus()"><span>+</span></button>
                </div>
                <div class="cartbutton">
                    <button class="cotiza pe" type="submit" id="aceptarcarrito" disabled="true">
                        <div class="carro">
                            <img class="carrito" src="/images/webp/cart.webp" alt="cart">
                            <p class="agregar">Agregar</p>
                        </div>
                    </button>
                </div>
            </div>


            <div class="proddesc">
                <p><%= proddescription %></p>
            </div>
        </div>
    </form>
    <div class="relleno"></div>
    <!-- <div class="proddesc">
        <p><%= proddescription %></p>
    </div> -->
    <div class="modal" id="modalfotos">
        <span class="close">&times;</span>
        <img class="modal-content" id="img01">
    </div>
 <script src="/js/zoom.js" type="text/javascript"></script>
 <script src="/js/hide.js" type="text/javascript"></script>
 <script src="/js/countproducts.js" type="text/javascript"></script>
<script>
    function disablebuttonminus(){
        var disabled = document.getElementById("prodquantity");
        var button = document.getElementById("aceptarcarrito");

        if(disabled.value == 0 || disabled.value - 1 == 0){
            document.getElementById("aceptarcarrito").disabled = true;
        } else {
            document.getElementById("aceptarcarrito").disabled = false;
        }
    }

    function disablebuttonplus(){
        var disabled = document.getElementById("prodquantity");
        var button = document.getElementById("aceptarcarrito");
        
        if(disabled.value + 1 == 0){
            document.getElementById("aceptarcarrito").disabled = true;
        } else {
            document.getElementById("aceptarcarrito").disabled = false;
        }
    }
</script>
<script>
    function valorCero() {
        const cero = document.getElementById('stock').innerText;

        console.log(cero);

        var reponerStock = document.getElementById('stockCero');

        if(cero === 'DISPONIBLIDAD: 0'){
            reponerStock.style.display = 'flex';
        }
    }
    
</script>
</body>
</html>