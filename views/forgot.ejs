    <title>Forgot</title>
</head>

<body onload="alerta()">
    <div class="nav" id="nav">
        <ul class="navbar" id="navbar">
            <ul class="navbar" id="navbar">
                <li class="links"><a class="logosredes" href="/"> 
                    <img class="wsplogo" src="/images/webp/home.webp" alt="con_logo"></a></li>
        </ul>
    </div>
    <div class="relleno"></div>
    <div class="formu">
        <form action="/auth/forgot" method="post">
            <div class="inputforms">
                <div class="lblinput">
                    <div class="inputlbl">
                        <label class="lang lblform" key="F1" for="user">USUARIO:</label>
                        <input class="forminput" type="text" id="user" name="user" required><br />
                    </div>
                    <br />
                    <div class="inputlbl">
                        <label class="lang lblform" key="F1" for="mail">EMAIL:</label>
                        <input class="forminput" type="email" id="mail" name="mail" required><br />
                    </div>
                    <br />
            <input class="cotiza pe" type="submit" value="Enviar" id="aceptar">
        </form>
    </div>
    <p id="data" style="display: none;"><%= no %></p>
    <script src="/js/navbar.js" type="text/javascript"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>    
    <script>
        function alerta(){
        var alerta = document.getElementById('data').innerText;
        
        if(alerta === 'yes'){
            Swal.fire({
                title: 'Error',
                text: 'Usuario no registrado con ese correo electr√≥nico.',
                icon: 'error',
                confirmButtonText: 'Aceptar',
                showConfirmButton: true,
            }).then(function() {
                window.location = "/forgot";
            });
            alerta = 'no';
        }
    }
    </script>
</body>
